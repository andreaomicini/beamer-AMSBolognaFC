\mode<presentation>
%
\setbeamertemplate{navigation symbols}{}
%
\useoutertheme{infolines}
\useinnertheme[shadow=true]{rounded}
%%% TO UNCOMMENT FOR LOCAL DIR
\usecolortheme{bolognafc}
%% Alma Logo
\pgfdeclareimage[width=\paperwidth]{bg}{img/almacesena-background}
\setbeamertemplate{background}{\pgfuseimage{bg}}
% text
\setbeamercolor{normal text}{fg=bolognablue!10!black}
\setbeamercolor{alerted text}{fg=bolognared!90!black}
\setbeamercolor{quote}{fg=bolognablue!80!white}
% bullets
\setbeamercolor*{item}{fg=bolognared}
% front page
\setbeamercolor{title}{fg=bolognablue!90!black}
\setbeamercolor{subtitle}{fg=bolognablue!90!white}
\setbeamercolor{author}{fg=bolognared!90!black}
\setbeamercolor{institute}{fg=bolognablue!75!black}
\setbeamercolor{date}{fg=bolognablue!75!white}
% block header
\setbeamercolor{block title}{use=structure,fg=bolognasilver!90!white,bg=bolognablue!55!black}
\setbeamercolor{block title alerted}{use=alerted text,fg=bolognasilver!50!white,bg=bolognablue!35!black}
\setbeamercolor{block title example}{use=example text,fg=bolognablue!30!black,bg=bolognablue!30!white}
% block body
\setbeamercolor{block body}{parent=normal text,use=block title,bg=bolognablue!2!white}
\setbeamercolor{block body alerted}{parent=normal text,use=block title alerted,bg=bolognablue!5!white}
\setbeamercolor{block body example}{parent=normal text,use=block title example,bg=bolognablue!7!white}
% table of content
\setbeamercolor{section in toc}{fg=bolognablue!40!black}
\setbeamercolor{subsection in toc}{fg=bolognablue!50!black}
% footnote
\setbeamercolor{footnote mark}{fg=bolognared!90!black}
\setbeamercolor{footnote}{fg=bolognablue!25!gray}
% biblio
\setbeamertemplate{bibliography item}{\insertbiblabel}
\setbeamercolor{bibliography entry author}{fg=bolognablue!90!black}
\setbeamercolor{bibliography entry title}{fg=bolognared!75!black} 
\setbeamercolor{bibliography entry location}{fg=bolognablue!75!gray} 
\setbeamercolor{bibliography entry note}{fg=bolognasilver!50!black}  
% abstract
\setbeamercolor*{abstract title}{fg=bolognablue}
\setbeamerfont*{abstract title}{family=\sffamily}
\setbeamercolor*{abstract}{fg=purple!50!black}
\setbeamerfont*{abstract}{family=\rmfamily,size=\small}
% Citation
\newcommand{\ccite}[1]{{\textcolor{bolognasilver!80!black}{\tiny\cite{#1}}}}
\newcommand{\cccite}[1]{{\textcolor{bolognasilver}{\tiny\cite{#1}}}}
% URL
\newcommand{\uurl}[1]{{\textcolor{bolognared!75!black}{\scriptsize\url{#1}}}}
\newcommand{\uuurl}[1]{{\textcolor{bolognasilver!80!black}{\tiny\url{#1}}}}
% emph 
\renewcommand{\emph}[1]{\textcolor{bolognablue!50!black}{\textit{#1}}}
% alert 
%\renewcommand{\alert}[1]{\textcolor{bolognablue!90!black}{#1}}
\newcommand{\aalert}[1]{\textcolor{bolognasilver!90!black}{\it#1}}

\mode
<all>
